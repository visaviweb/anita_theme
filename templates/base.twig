{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="sr-only" href="#content">{{ _e( 'Skip to content') }}</a>
	{% block header %}

<header class="fixed z-30 w-full flex flex-col bg-white border-b border-gray-200">
  <nav id="site-menu" class="flex flex-col sm:flex-row w-full justify-between items-center px-5 sm:px-9 lg:px-14 pt-2 pb-1 sm:pb-5 sm:pt-6">
    <div class="w-full sm:w-auto self-start sm:self-center flex flex-row sm:flex-none flex-no-wrap justify-between items-center">
      	<h2 class="text-xl font-quicksand">
				<a href="{{site.url}}" class="no-underline" rel="home">{{site.name}}</a>
		</h2>
		<button id="menuBtn" class="hamburger block sm:hidden focus:outline-none" type="button" onclick="navToggle();">
        <span class="hamburger__top-bun"></span><span class="hamburger__bottom-bun"></span>
      </button>
    </div>
    <div id="menu" class="w-full sm:w-auto self-start sm:self-center sm:flex flex-col sm:flex-row items-center h-full pb-3 sm:pb-0 hidden font-quicksand text-gray-400 border-t sm:border-0 border-gray-200">
    {% for item in menu.get_items %}
			<a class="w-full no-underline hover:underline sm:w-auto sm:pl-5 py-2 sm:py-1 sm:pt-2 {{ item.classes | join(' ') }}" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
	{% endfor %}
	<div class="w-full sm:w-auto -ml-2 sm:ml-0 sm:pl-5">
	<a href="https://www.facebook.com/people/Anita-Panizzolo/100011792346403" class="no-underline" title="Facebook">
	<svg class="svg-icon inline w-6" viewBox="0 0 20 20">
							<path fill="currentColor" d="M11.344,5.71c0-0.73,0.074-1.122,1.199-1.122h1.502V1.871h-2.404c-2.886,0-3.903,1.36-3.903,3.646v1.765h-1.8V10h1.8v8.128h3.601V10h2.403l0.32-2.718h-2.724L11.344,5.71z"></path>
						</svg> 
						</a>
	<a href="https://www.instagram.com/anitapanizzolo/" class="no-underline" title="instagram">
	<svg class="svg-icon inline w-6" viewBox="0 0 20 20">
							<path fill="currentColor" d="M14.52,2.469H5.482c-1.664,0-3.013,1.349-3.013,3.013v9.038c0,1.662,1.349,3.012,3.013,3.012h9.038c1.662,0,3.012-1.35,3.012-3.012V5.482C17.531,3.818,16.182,2.469,14.52,2.469 M13.012,4.729h2.26v2.259h-2.26V4.729z M10,6.988c1.664,0,3.012,1.349,3.012,3.012c0,1.664-1.348,3.013-3.012,3.013c-1.664,0-3.012-1.349-3.012-3.013C6.988,8.336,8.336,6.988,10,6.988 M16.025,14.52c0,0.831-0.676,1.506-1.506,1.506H5.482c-0.831,0-1.507-0.675-1.507-1.506V9.247h1.583C5.516,9.494,5.482,9.743,5.482,10c0,2.497,2.023,4.52,4.518,4.52c2.494,0,4.52-2.022,4.52-4.52c0-0.257-0.035-0.506-0.076-0.753h1.582V14.52z"></path>
