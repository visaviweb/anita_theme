{% extends "base.twig" %}

{% block content %}
	<div class="container max-w-3xl">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content font-quicksand">
				<h1 class="article-h1 text-2xl sm:text-3xl py-2 sm:py-6 ">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}